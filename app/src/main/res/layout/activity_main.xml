<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/id_request_activity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Request Activity"/>


        <Button
            android:id="@+id/id_request_dispatcher"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Request Dispatcher Library"/>

        <Button
            android:id="@+id/id_easy_permission"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Easy Permissin Library"/>

        <Button
            android:id="@+id/id_request_phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Request Phone Call"/>
    </LinearLayout>

</RelativeLayout>